{
  "extends": "../../tsconfig.base.json",
  "include": ["./**/*.d.ts", "./**/*.ts", "./**/*.tsx", ".react-router/types/**/*", "types/**/*"],
  "exclude": [".react-router/**"],
  "rootDirs": [".", "./.react-router/types"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "target": "ES2022",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "types": ["node", "@shopify/oxygen-workers-types", "react-router", "vite/client"],
    "paths": {
      "@/*": ["app/*"],
      "@lib/*": ["app/lib/*"],
      "@server/*": ["app/server/*"],
      "@nuvens/core": ["../../packages/core/src/index.ts"],
      "@nuvens/ui": ["../../packages/ui/src/index.ts"],
      "@nuvens/brand-ui": ["app/brand-ui.generated.ts"]
    },
    "noEmit": true
  }
}
