{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./**/*.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    ".react-router/types/**/*",
    "types/**/*",
    "../../packages/shopify/src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "target": "ES2022",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "types": [
      "node",
      "@shopify/oxygen-workers-types",
      "vite/client",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "@/*": ["app/*"],
      "@nuvens/brand-ui": ["app/brand-ui.generated.ts"],
      "@nuvens/core": ["../../packages/core/src/index.ts"],
      "@nuvens/shopify": ["../../packages/shopify/src/index.ts"],
      "@nuvens/ui": ["../../packages/ui/src/index.ts"]
    },
    "rootDirs": [".", ".react-router/types"],
    "noEmit": true
  }
}
