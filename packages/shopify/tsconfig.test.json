{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "@testing-library/jest-dom", "@testing-library/jest-dom/vitest"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "**/__tests__/**/*.{ts,tsx}",
    "**/*.test.{ts,tsx}",
    "vitest.setup.ts",
    "setup-tests.d.ts"
  ],
  "exclude": ["dist", "build", "coverage", "node_modules"]
}
