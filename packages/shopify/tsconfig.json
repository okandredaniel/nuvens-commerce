{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "vite/client", "@shopify/hydrogen/storefront-api-types"]
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/__tests__/**",
    "vitest.setup.ts",
    "vitest.config.ts"
  ],
  "references": [{ "path": "../core" }, { "path": "../ui" }]
}
