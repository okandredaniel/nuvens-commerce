{
  "name": "nuvens-commerce",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "pnpm exec shopify hydrogen dev --path apps/storefront --codegen --codegen-config-path ./packages/shopify/codegen.ts",
    "build": "shopify hydrogen build --path apps/storefront --codegen --codegen-config-path ./packages/shopify/codegen.ts",
    "preview": "shopify hydrogen preview --path apps/storefront --build",
    "codegen": "shopify hydrogen codegen --path apps/storefront --codegen-config-path ./packages/shopify/codegen.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "locale:add": "node scripts/add-locale-namespace.mjs",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ci": "vitest --run --coverage",
    "typecheck": "pnpm -r typecheck",
    "prepare": "simple-git-hooks",
    "generate-review": "( echo \"## STATUS\"; git status -sb; echo; echo \"## DIFF --STAGED\"; git diff --staged; echo; echo \"## DIFF VS HEAD\"; git diff HEAD; echo; echo \"## UNTRACKED\"; git ls-files --others --exclude-standard ) > repo-review.txt"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "pre-push": "pnpm -w codegen && pnpm -r --if-present typecheck && pnpm -w test:ci"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix",
    "{apps,packages}/**/*.{ts,tsx}": "vitest related --run --passWithNoTests"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@react-router/dev": "7.6.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^15.15.0",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "clsx": "^2.1.1",
    "html-parse-stringify": "^3.0.1",
    "i18next": "^25.5.0",
    "lucide-react": "^0.542.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.7.3",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12"
  }
}
