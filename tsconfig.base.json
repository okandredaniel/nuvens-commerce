{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@nuvens/core": ["packages/core/src/index.ts"],
      "@nuvens/ui": ["packages/ui/src/index.ts"],
      "@nuvens/brand-ui": ["apps/storefront/app/brand-ui.generated.ts"]
    },
    "types": ["node"]
  },
  "include": ["types/**/*.d.ts"]
}
